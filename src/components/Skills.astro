---
const { skills } = Astro.props;
---

<section class="mb-8">
  <h2 class="text-2xl font-bold mb-4">Habilidades</h2>
  <div class="flex flex-wrap gap-2">
    {skills.map((skill) => (
      <span class="bg-gray-200 px-3 py-1 rounded-full text-sm">
        {skill}
      </span>
    ))}
  </div>
</section>