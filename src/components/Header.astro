---
const { name, title, contact } = Astro.props;
---

<header class="text-center mb-10">
  <img 
    src="https://github.com/EduardoHernandezGuzman.png" 
    alt={name}
    class="w-32 h-32 rounded-full mx-auto mb-4 shadow-lg"
  >
  <h1 class="text-4xl font-bold mb-2">{name}</h1>
  <h2 class="text-2xl text-gray-600 mb-4">{title}</h2>
  <div class="flex justify-center space-x-4">
    <a href={`mailto:${contact.email}`} class="text-blue-600 hover:text-blue-800">
      {contact.email}
    </a>
    <a href={contact.linkedin} target="_blank" rel="noopener noreferrer" class="text-blue-600 hover:text-blue-800">
      LinkedIn
    </a>
    <a href={contact.github} target="_blank" rel="noopener noreferrer" class="text-blue-600 hover:text-blue-800">
      GitHub
    </a>
  </div>
</header>